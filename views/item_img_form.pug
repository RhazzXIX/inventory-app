extends sidebar 

block main
  main
    h1 #{title}: #{item.name}

    p #[em Optional]
    form(action="", method="post" enctype="multipart/form-data") 
      label(for="itemImg") Upload image: 
        input#itemImg(
          type="file", 
          name="itemImg", 
          required=true, 
          accept="image/png, image/jpeg, image/jpg"
        )
      button(type="submit") Submit 
    if errors 
      ul 
        each error in errors 
          li=error.msg
    p 
      a(href=item.url) Proceed to item detail 